{
  "name": "task-manager-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend for Task Manager",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test:api": "cross-env NODE_ENV=test JWT_SECRET=TEST_ONLY_SECRET_change_me mocha \"test/**/*.test.js\" --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=index,overwrite=true,html=true,json=true --timeout 15000",
    "test:unit": "cross-env NODE_ENV=test JWT_SECRET=TEST_ONLY_SECRET_change_me mocha \"test/unit/**/*.test.js\" --reporter spec --timeout 10000",
    "test:task:create": "npm run test:unit -- --grep \"createTask\"",
    "test:task:list": "npm run test:unit -- --grep \"listTasks|getTasks\"",
    "test:task:update": "npm run test:unit -- --grep \"updateTask\"",
    "test:task:delete": "npm run test:unit -- --grep \"deleteTask\"",
    "test:task:create:fail": "cross-env UNIT_FAIL=1 npm run test:task:create",
    "test:task:list:fail": "cross-env UNIT_FAIL=1 npm run test:task:list",
    "test:task:update:fail": "cross-env UNIT_FAIL=1 npm run test:task:update",
    "test:task:delete:fail": "cross-env UNIT_FAIL=1 npm run test:task:delete",
    "test": "npm run test:unit"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.7.3",
    "mochawesome": "^7.1.3",
    "sinon": "^17.0.1",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
